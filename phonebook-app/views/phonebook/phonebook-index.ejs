  <%# as the filename states, this view should render the `index` phone template that lists all movies in the database! %>
<%# make sure each phone has a button to be deleted from the databse %>

  <% include ../partials/header.ejs %>

  <div class="contact">
    <a class="btn btn-primary btn-large" href="/phones/add">Add New contact</a>
  </div>
  <% for (let phones of data) { %>
    <div class='phones'>
      <h1><%= phones.name %></h1>
      <h1><%= phones.contact %></h1>
      <h1><%= phones.location %></h1>
      <a href='/phones/<%= phones.id%>'>Learn more</a>


       <form action="/phones/<%= phones.id %>?_method=Delete " method="Post">
      <input type="Submit" value="Delete"/>
      </form>
    </div>
    <div class="edit">
       <form action="/phones/edit/<%=phones.id %>"method="GET">
      <input type="Submit" value="Edit"/>
      </form>
      </div>
  <% } %>

  <% include ../partials/footer.ejs %>
